{{#section 'js'}}
<script src="//cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.js"></script>
<script>
    $(function () {
        $('#registerForm').validate({
            rules: {
                oldPassword: {
                    required: true,
                    minlenght: 6
                },
                newPassword: {
                    required: true,
                    minlenght: 6
                },
                repPassword: {
                    required: true,
                    equalTo: $('[name="password"]')
                },
            },
            messages: {
                password: {
                    required: "Mật khẩu không được để trống",
                    minlenght: "Mật khẩu phải có ít nhất 6 kí tự"
                },
                rePassword: {
                    required: "Không được để trống phần này",
                    equalTo: "Không giống với mật khẩu"
                },
                email: {
                    required: "Không được để trống phần này",
                    email: "Hãy nhập một email hợp lý"
                }
            },
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            highlight: function (e) {
                $(e).removeClass('is-valid').add('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').add('is-valid');
            }
        });
    })  
</script>
