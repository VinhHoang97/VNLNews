<!-- ##### Login Area Start ##### -->
<div class="mag-login-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content bg-white p-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Xin chào Vinh!</h5>
                    </div>

                    <form name="myform" action="/account/profile" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" id="hoten" value="{{authAccount.HoTen}}">
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2" id="gioitinh">Giới tính:</label>
                            {{#if gender}}
                            <label class="col-lg-2" for="nam"><input id="nam" type="radio" name="gioitinh" value="Nam"
                                    checked> Nam</label>
                            <label class="col-lg-2" for="nu"><input id="nu" type="radio" name="gioitinh" value="Nữ">
                                Nữ</label>
                            {{else}}
                            <label class="col-lg-2" for="nam"><input id="nam" type="radio" name="gioitinh" value="Nam">
                                Nam</label>
                            <label class="col-lg-2" for="nu"><input id="nu" type="radio" name="gioitinh" value="Nữ"
                                    checked>
                                Nữ</label>
                            {{/if}}
                        </div>
                        <div class="form-group row">
                            <label id="ngaysinh" class="control-label col-sm-2" for="day">Ngày sinh:</label>
                            <div class="col-lg-2">
                                <select id="day" name="day" class="form-control"
                                    style="background-image: linear-gradient(#f7f8f9,#e5e8ea, #dee1e5)">
                                    <script>
                                        for (var i = 1; i < 32; i++) {
                                            var html = '<option value="' + i + '">' + i + '</option>';
                                            document.writeln(html);
                                        }
                                    </script>
                                </select>
                            </div>
                            <div class="col-lg-2">
                                <select id="month" name="month" class="form-control"
                                    style="background-image: linear-gradient(#f7f8f9,#e5e8ea, #dee1e5)">
                                    <script>
                                        for (var i = 1; i < 13; i++) {
                                            var html = '<option value="' + i + '">' + i + '</option>';
                                            document.writeln(html);
                                        }
                                    </script>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <select id="year" name="year" class="form-control"
                                    style="background-image: linear-gradient(#f7f8f9,#e5e8ea, #dee1e5)">
                                    <script>
                                        for (var i = 1990; i < 2006; i++) {
                                            var html = '<option value="' + i + '">' + i + '</option>';
                                            document.writeln(html);
                                        }
                                    </script>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                placeholder="myemail@gmail.com" value="{{authAccount.Email}}">
                        </div>
                        <div class="form-group">
                            <input id="ten" type="text" class="form-control" placeholder="Vinh Hoàng"
                                value="{{authAccount.UserName}}">
                        </div>


                        <div class="form-group">
                            <input type="password" class="form-control" id="exampleInputEmail1" name="oldPassword"
                                placeholder="Mật khẩu cũ">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="exampleInputPassword1" name="newPassword"
                                placeholder="Mật khẩu mới">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới"
                                name="repPassword" name="psw-repeat" id="psw-repeat">
                        </div>
                        <div style="display: flex; justify-content:space-evenly">
                            <button type="submit" class="btn mag-btn mt-30">Lưu</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>