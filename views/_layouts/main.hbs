<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Title -->
    <title>Báo Điện Tử TH16-News</title>
       <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    {{{_sections.css}}}
    <!-- Favicon -->
    <link rel="icon" href="/img/core-img/favicon.ico">
    <script src='https://www.google.com/recaptcha/api.js?hl=vi'></script>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
   
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">

        <!-- Navbar Area -->
        <div class="mag-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <!-- Menu -->
                <nav class="classy-navbar justify-content-between" id="magNav">

                    <!-- Nav brand -->
                    <a href="/" class="nav-brand"><img src="/img/core-img/logo.png" alt=""></a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>

                    <!-- Nav Content -->
                    <div class="nav-content d-flex align-items-center">
                        <div class="classy-menu">

                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    <li class="active"><a href="/">Trang chủ</a></li>
                                    {{#each categoryFull}}
                                    <li><a
                                            href="/products/productByParentCategory/{{parentCategory.IDChuyenMuc}}">{{parentCategory.TenChuyenMuc}}</a>
                                        <ul class="dropdown">
                                            {{#each childCategory}}
                                            <li><a
                                                    href="/products/productByCategory/{{IDChuyenMuc}}">{{TenChuyenMuc}}</a>
                                            </li>
                                            {{/each}}
                                        </ul>

                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>

                        <div class="top-meta-data d-flex align-items-center">
                            <!-- Top Search Area -->
                            <div class="top-search-area">
                                <form action="/search" method="POST">
                                    <input type="search" name="topSearch" id="topSearch" placeholder="tìm kiếm...">
                                    <button type="submit" class="btn"><i class="fa fa-search"
                                            aria-hidden="true"></i></button>
                                </form>
                            </div>
                            {{#if isAuthenticatedAccount}}
                            <!-- Login -->
                            <a href="/account/profile" class="login-btn"><i class="fa fa-user"
                                    aria-hidden="true"></i></a>
                            {{else}}
                            <a href="/account/login" class="login-btn"><i class="fa fa-user" aria-hidden="true"></i></a>
                            {{/if}}
                            <!-- Submit Video -->

                            {{#if isAuthenticatedAccount}}<form id="logOut" action="/account/logout" method="POST"></form>
                            <a class="submit-video" href="javascript:$('#logOut').submit();"><span><i
                                        class="fa fa-user-circle-o"></i></span> <span class="video-text">Đăng
                                    xuất</span></a>

                            {{else}}
                            <a href="/admin/" class="submit-video"><span><i
                                        class="fa fa-user-circle-o"></i></span> <span class="video-text">Admin</span></a>

                            {{/if}}

                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->



    {{{body}}}


    <!-- ##### Footer Area Start ##### -->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <!-- Logo -->
                        <a href="index.html" class="foo-logo"><img src="/img/core-img/logo.png" alt=""></a>
                        <p>Tờ báo của người Việt dành cho người Việt</p>
                        <div class="footer-social-info">
                            <a href="https://www.facebook.com" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">Danh mục</h6>
                        <nav class="footer-widget-nav">
                            <ul>
                                {{#each categoryFull}}
                                <li><a href="/products/productByParentCategory/{{parentCategory.IDChuyenMuc}}"><i
                                            class="fa fa-angle-double-right"
                                            aria-hidden="true"></i>{{ parentCategory.TenChuyenMuc}}
                                    </a></li>
                                {{#each childCategory}}
                                <li><a href="/products/productByCategory/{{IDChuyenMuc}}"><i
                                            class="fa fa-angle-double-right" aria-hidden="true"></i>
                                        {{TenChuyenMuc}}</a></li>
                                {{/each}}
                                {{/each}}

                            </ul>
                        </nav>
                    </div>
                </div>




                <!-- Copywrite Area -->
                <div class="copywrite-area">
                    <div class="container">
                        <div class="row">
                            <!-- Copywrite Text -->
                            <div class="col-12 col-sm-6">
                                <p class="copywrite-text">
